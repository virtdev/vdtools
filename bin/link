#!/usr/bin/python

import os
import sys
import commands

_bin = commands.getoutput('readlink -f %s' % sys.argv[0])
_path = os.path.dirname(_bin)
_dirname = os.path.dirname(_path)
sys.path.append(_dirname)

from lib.common import link

def usage():
    print('usage: link [src] [dest]')

if __name__ == '__main__':
    if len(sys.argv) != 3:
        usage()
        sys.exit()
    src = sys.argv[1]
    dest = sys.argv[2]
    print(str(link(src, dest)))
